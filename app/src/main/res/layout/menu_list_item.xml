<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp">

    <TextView
        android:id="@+id/name_of_cafe"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:gravity="top"
        android:textColor="#000"
        android:textSize="16sp"
        tools:text="Pizza" />

    <TextView
        android:id="@+id/location_of_cafe"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_below="@+id/name_of_cafe"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="#45000000"
        android:textSize="7sp"
        tools:text="вул умлумав" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_below="@+id/location_of_cafe"
        android:gravity="bottom"
        android:textSize="7sp"
        tools:text="234r" />

    <TextView
        android:id="@+id/waiting_time"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_below="@+id/location_of_cafe"
        android:gravity="bottom"
        android:paddingLeft="54dp"
        android:textSize="7sp"
        tools:text="час очікування" />

    <ImageView
        android:id="@+id/photo_of_cafe"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        tools:src="@drawable/google" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/photo_of_cafe"
        android:layout_marginTop="16dp"
        android:background="#12000000"
        android:textSize="7sp" />

</RelativeLayout>