<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/row_padding_vertical">

    <LinearLayout
        android:id="@+id/all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toLeftOf="@+id/selected_quantity"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_of_meal"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginRight="16dp"
            android:gravity="left"
            android:textColor="#000"
            android:textSize="18sp"
            tools:text="Pizza" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="ipdvhevvouqvuqiovioqvio"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/price_of_meal"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_below="@+id/description"
                android:gravity="bottom"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                tools:text="Ціна" />

            <TextView
                android:id="@+id/time_to_prepare"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="24dp"
                android:gravity="bottom"
                android:textSize="12sp"
                tools:text="12 хв" />


        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/selected_quantity"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_toLeftOf="@+id/photo_of_meal"
        android:paddingRight="16dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        tools:text="234r" />


    <ImageView
        android:id="@+id/photo_of_meal"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        tools:src="@drawable/google" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/all"
        android:background="#12000000"
        android:textSize="1sp" />

</RelativeLayout>