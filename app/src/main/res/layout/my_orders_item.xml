<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/row_padding_vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/row_padding_vertical">

    <TextView
        android:id="@+id/name_of_cafe_for_UO"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textColor="#000"
        android:textSize="20sp"
        tools:text="NiceCoffee" />

    <TextView
        android:id="@+id/time_of_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toLeftOf="@+id/photo_of_cafe_for_UO"
        android:layout_toRightOf="@+id/name_of_cafe_for_UO"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        tools:text="14:45" />

    <TextView
        android:id="@+id/location_of_cafe_for_UO"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@+id/name_of_cafe_for_UO"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="#45000000"
        android:textSize="12sp"
        tools:text="вул умлумав" />

    <ImageView
        android:id="@+id/photo_of_cafe_for_UO"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        tools:src="@drawable/google" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/photo_of_cafe_for_UO"
        android:layout_marginTop="16dp"
        android:background="#12000000" />

</RelativeLayout>