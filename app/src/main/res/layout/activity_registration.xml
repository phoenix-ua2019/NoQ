<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="15dp"
        android:id="@+id/logo_sign_up"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:src="@drawable/google"/>

    <EditText
        android:id="@+id/enter_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:textSize="18sp"
        android:hint="Ім'я прізвище"
        android:inputType="textPersonName"
        android:backgroundTint="@color/redBasic"/>


    <EditText
        android:id="@+id/enter_telephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:textSize="18sp"
        android:hint="Телефон"
        android:inputType="phone"
        android:backgroundTint="@color/redBasic"/>


    <EditText
        android:id="@+id/enter_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:textSize="18sp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:backgroundTint="@color/redBasic"/>

    <EditText
        android:id="@+id/enter_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:textSize="18sp"
        android:hint="День народження"
        android:inputType="date"
        android:backgroundTint="@color/redBasic"/>

    <EditText
        android:id="@+id/enter_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:textSize="18sp"
        android:hint="Введіть пароль"
        android:inputType="text"
        android:backgroundTint="@color/redBasic"
        android:password="true"/>


    <EditText
        android:id="@+id/enter_repassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:textSize="18sp"
        android:hint="Повторіть пароль"
        android:inputType="text"
        android:backgroundTint="@color/redBasic"
        android:password="true"/>

    <Button
        android:id="@+id/sign_up"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="42dp"
        android:layout_gravity="center"
        android:text="Зареєструватися"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/button_style"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="12dp"
        android:text="або"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/sign_in"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="25dp"
        android:layout_gravity="center"
        android:text="Увійти"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/button_style"/>

</LinearLayout>
</FrameLayout>
